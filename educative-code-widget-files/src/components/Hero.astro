---
import Meta from '@components/Meta.astro';

const {
    post,
    displayAsLink = false
} = Astro.props;
const { data } = post;
const Element = displayAsLink ? 'a' : 'div';
---

<Element href={displayAsLink && post.slug}>
    <img src={data.heroImage} alt={data.title}>
    <div>
        <h1>{data.title}</h1>
        <Meta
            publishDate={data.publishDate}
            readTime={post.body}
            large={true}
        />
    </div>
</Element>

<style>
    a,
    div {
        height: 250px;
        overflow: hidden;
        position: relative;
        display: block;
        color: var(--text-primary);
    }

    img {
        width: 100%;
        height: 250px;
    }

    a > div,
    div > div {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    h1 {
        text-shadow: 0 2px 5px var(--border);
        text-align: center;
    }
</style>
